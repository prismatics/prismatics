{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "types": [
      "node",
      "react",
      "react-native"
    ],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "importHelpers": true,
    "composite": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/*"]
}